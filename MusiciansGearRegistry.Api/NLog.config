<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <!--layout="${longdate} ${uppercase:${level}} ${message}" -->
    <target xsi:type="File" name="errorLog" fileName="${basedir}/logs/errorLog_${shortdate}.log"/>
    <target xsi:type="File" name="unhandledErrors" fileName="${basedir}/logs/unhandled_${shortdate}.log"/>
    <target xsi:type="File" name="debugTrace" fileName="${basedir}/logs/debugTrace_${shortdate}.log"/>
    <target xsi:type="File" name="info" fileName="${basedir}/logs/info_${shortdate}.log"/>
  </targets>

  <rules>
    <logger name="ErrorLog" minlevel="Error" writeTo="errorLog" final="true" />
    <logger name="TraceLog" minlevel="Trace" writeTo="debugTrace" final="true" />
    <logger name="UnhandledErrorLog" minlevel="Error" writeTo="unhandledErrors" final="true" />
    <logger name="InfoLog" minlevel="Info" writeTo="info" final="true" />
  </rules>
</nlog>